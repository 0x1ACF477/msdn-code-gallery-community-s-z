<Page
    x:Class="WindwsCsharpvsJavascript.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WindwsCsharpvsJavascript"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid  Background="LightBlue">
        <Grid x:Name="LayoutRoot" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <WebView Name="WebBrowserName" Grid.Row="0" Height="272" Margin="5" />
            <Button Name="BtnLoadHtml" Background="LightGreen" Foreground="Black" Grid.Row="1" HorizontalAlignment="Stretch" Content="Load local html file" Click="BtnLoadHtml_Click" />
        </Grid>
    </Grid>
</Page>
