<Application x:Class="CombinedItemSourcesSample.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" >
    <Application.Resources>
        <!--Images for use as icons-->
        <BitmapImage x:Key="AlbumImg" UriSource="media/album.png"/>
        <BitmapImage x:Key="MovieImg" UriSource="media/movie.png"/>
        <BitmapImage x:Key="BookImg" UriSource="media/book.png"/>
        
        <!--globa style to make everything look a little nicer -->
        <Style TargetType="{x:Type Image}">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Width" Value="30"/>
        </Style>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="Margin" Value="5,5,5,5"/>
        </Style>
    </Application.Resources>
</Application>
