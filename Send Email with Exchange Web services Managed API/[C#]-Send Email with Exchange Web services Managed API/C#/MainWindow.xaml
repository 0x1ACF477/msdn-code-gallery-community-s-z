<Window x:Class="EWSSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button Content="Send" Height="52" HorizontalAlignment="Left" Margin="12,12,0,0" Name="sendButton" VerticalAlignment="Top" Width="75" Click="sendButton_Click" TabIndex="4" />
        <TextBox Margin="12,70,12,12" Name="bodyTextbox" VerticalScrollBarVisibility="Visible" TextWrapping="Wrap" TabIndex="3" />
        <TextBox Height="23" Margin="151,12,12,0" Name="recipientTextbox" VerticalAlignment="Top" TabIndex="1" />
        <Label Content="To:" Height="28" HorizontalAlignment="Left" Margin="93,10,0,0" Name="label1" VerticalAlignment="Top" />
        <TextBox Height="23" Margin="151,41,12,0" Name="subjectTextbox" VerticalAlignment="Top" TabIndex="2" />
        <Label Content="Subject:" Height="28" HorizontalAlignment="Left" Margin="93,39,0,0" Name="label2" VerticalAlignment="Top" />
    </Grid>
</Window>
