<Window x:Class="TestWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen">
  <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
    <Button x:Name="ShowInfo" Height="23" Width="125" Margin="3" Click="ShowInfo_Click">Show Info</Button>
    <Button x:Name="ShowQuestion" Height="23" Width="125" Margin="3" Click="ShowQuestion_Click">Show Question</Button>
    <Button x:Name="ShowWarning" Height="23" Width="125" Margin="3" Click="ShowWarning_Click">Show Warning</Button>
    <Button x:Name="ShowError" Height="23" Width="125" Margin="3" Click="ShowError_Click">Show Error</Button>
    <Button x:Name="ShowException" Height="23" Width="125" Margin="3" Click="ShowException_Click">Show Exception</Button>
  </StackPanel>
</Window>
