<Window x:Class="WpfEFStoreImageCSharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="220" />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Image Name="image1" Grid.Row="0" />
        <StackPanel Grid.Row="1">
            <StackPanel Orientation="Horizontal" Height="30" >
                <TextBox Name="TextBox1" Width="450"/>
                <Button Margin="2" Content="Browse ..." Click="Button_Click" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Height="30" >
                <Button Name="SaveImage" Content="Upload to DB" Width="450" Click="SaveImage_Click" />
                <Button Content="Exit" Width="50" Margin="2" />
            </StackPanel>
            <Label Name="Label1" Height="30" Margin="4" />
        </StackPanel>
    </Grid>
</Window>
