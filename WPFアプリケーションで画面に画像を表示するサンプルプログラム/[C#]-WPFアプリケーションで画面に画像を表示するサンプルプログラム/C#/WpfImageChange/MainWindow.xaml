<Window x:Class="WpfImageChange.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Image Name="image1" Stretch="Fill" Grid.Row="1" />
        <Button Content="Change Picture" Name="button1" Click="button1_Click" />
    </Grid>
</Window>
